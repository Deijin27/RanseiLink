<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Height="500" Width="900"
        x:Class="RanseiLink.XP.Views.MainWindow"
        Icon="/Assets/ranseilink-logo.ico"
        Title="RanseiLink XP">
	<Grid ColumnDefinitions="190,*">

		<Border Grid.Column="0" Grid.ColumnSpan="2" Background="{DynamicResource WindowTransparentBackgroundBrush}" BorderThickness="0"/>
		<Border CornerRadius="10,0,0,0" Grid.Column="1"  Background="{DynamicResource WindowBackgroundBrush}" BorderThickness="0"/>


		<ContentControl Content="{Binding CurrentVm}" Grid.ColumnSpan="2"/>
		
		<Button Grid.Column="0" Content="&#xe5c4;" 
		        Command="{Binding BackButtonCommand}"
		        IsVisible="{Binding BackButtonVisible}"
		        FontFamily="{StaticResource MaterialIcons}"
		        Width="45" Height="30"
		        FontSize="13"
		        HorizontalAlignment="Left"
		        VerticalAlignment="Top"
		        ToolTip.Tip="Home"
		        Classes="Hover"/>
	</Grid>

</Window>
