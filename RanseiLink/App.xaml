<Application x:Class="RanseiLink.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RanseiLink.ViewModels"
             xmlns:views="clr-namespace:RanseiLink.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="ThemeResourceDictionary">
                    <ResourceDictionary.MergedDictionaries>
                        <!-- Theme resource dictionary -->
                        <ResourceDictionary Source="Styles/Colors/Dark.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
               
                <ResourceDictionary Source="Styles/Icons.xaml"/>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Fonts -->
            <FontFamily x:Key="SegoeMDL2Assets">pack://application:,,,/Fonts/#Segoe MDL2 Assets</FontFamily>
            
            <!-- Register Main View Models -->

            <DataTemplate DataType="{x:Type vm:ModSelectionViewModel}">
                <views:ModSelectionView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MainEditorViewModel}">
                <views:MainEditorView/>
            </DataTemplate>

            <!-- Register Selector View Models -->
            
            <DataTemplate DataType="{x:Type vm:PokemonSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MoveSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:GimmickSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:AbilitySelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:WarriorSkillSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MoveRangeSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:GimmickRangeSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ScenarioPokemonSelectorViewModel}">
                <views:ScenarioSelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ScenarioWarriorSelectorViewModel}">
                <views:ScenarioSelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MaxLinkSelectorViewModel}">
                <views:SelectorViewWithoutScroll/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BaseWarriorSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ScenarioAppearPokemonSelectorViewModel}">
                <views:SelectorViewWithoutScroll/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:EventSpeakerSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ScenarioKingdomSelectorViewModel}">
                <views:SelectorViewWithoutScroll/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ItemSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BuildingSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:KingdomSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BattleConfigSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MapSelectorViewModel}">
                <views:SelectorView/>
            </DataTemplate>

            <!-- Register View Models -->

            <DataTemplate DataType="{x:Type vm:MapViewModel}">
                <views:MapView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type vm:PokemonViewModel}">
                <views:PokemonView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MoveViewModel}">
                <views:MoveView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:GimmickViewModel}">
                <views:GimmickView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:AbilityViewModel}">
                <views:AbilityView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BattleConfigViewModel}">
                <views:BattleConfigView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:WarriorSkillViewModel}">
                <views:WarriorSkillView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MoveRangeViewModel}">
                <views:MoveRangeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:EvolutionTableViewModel}">
                <views:EvolutionTableView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ScenarioPokemonViewModel}">
                <views:ScenarioPokemonView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ScenarioWarriorViewModel}">
                <views:ScenarioWarriorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MaxLinkViewModel}">
                <views:MaxLinkView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:WarriorNameTableViewModel}">
                <views:WarriorNameTableView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BaseWarriorViewModel}">
                <views:BaseWarriorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ScenarioAppearPokemonViewModel}">
                <views:ScenarioAppearPokemonView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:EventSpeakerViewModel}">
                <views:EventSpeakerView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:KingdomViewModel}">
                <views:KingdomView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ScenarioKingdomViewModel}">
                <views:ScenarioKingdomView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ItemViewModel}">
                <views:ItemView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type vm:BuildingViewModel}">
                <views:BuildingView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:AbilityGridViewModel}">
                <views:ModelGridView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BaseWarriorGridViewModel}">
                <views:ModelGridView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MoveGridViewModel}">
                <views:ModelGridView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PokemonGridViewModel}">
                <views:ModelGridView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:WarriorSkillGridViewModel}">
                <views:ModelGridView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ScenarioWarriorGridSelectorViewModel}">
                <views:ScenarioWarriorGridSelectorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MsgGridViewModel}">
                <views:MsgGridView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:GimmickGridViewModel}">
                <views:ModelGridView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:BuildingGridViewModel}">
                <views:ModelGridView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MoveAnimationGridViewModel}">
                <views:ModelGridView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
