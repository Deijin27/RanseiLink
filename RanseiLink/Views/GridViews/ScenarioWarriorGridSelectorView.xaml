<UserControl x:Class="RanseiLink.Views.ScenarioWarriorGridSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:const="clr-namespace:RanseiLink.Constants"
             xmlns:vm="clr-namespace:RanseiLink.ViewModels"
             d:DataContext="{d:DesignInstance vm:ScenarioWarriorGridSelectorViewModel, IsDesignTimeCreatable=False}"
             xmlns:styles="clr-namespace:RanseiLink.Styles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox Margin="10,10,10,0" Grid.Row="0" Height="20" ItemsSource="{x:Static const:EnumProvider.ScenarioItems}" SelectedItem="{Binding SelectedScenario, Mode=TwoWay}" />

        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" CanUserAddRows="False" FrozenColumnCount="2"
              styles:DataGridHelper.ComboBoxColumnEditingStyle="{StaticResource {x:Type ComboBox}}"
              styles:DataGridHelper.TextColumnEditingStyle="{StaticResource {x:Type TextBox}}"/>

    </Grid>
</UserControl>
