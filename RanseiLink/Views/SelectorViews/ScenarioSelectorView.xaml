<UserControl x:Class="RanseiLink.Views.ScenarioSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:RanseiLink.Controls"
             xmlns:local="clr-namespace:RanseiLink.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid d:Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,10,10,0" Grid.Column="1" VerticalAlignment="Center" Width="40">
            <Button Style="{StaticResource RoundedGrayHoverButtonStyle}" Margin="5" Height="30" Width="30" Content="&#xE8C8;" FontFamily="{StaticResource SegoeMDL2Assets}"
                    ToolTip="Copy" Command="{Binding CopyCommand}"/>
            <Button Style="{StaticResource RoundedGrayHoverButtonStyle}" Margin="5,0,5,5" Height="30" Width="30" Content="&#xE77F;" FontFamily="{StaticResource SegoeMDL2Assets}"
                    ToolTip="Paste" Command="{Binding PasteCommand}"/>
            
        </StackPanel>

        <GroupBox Margin="10,10,0,0" Header="Select Scenario and Entry" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Scenario" VerticalAlignment="Center" />
                <ComboBox Height="20" Grid.Column="2" ItemsSource="{Binding ScenarioItems}" SelectedItem="{Binding SelectedScenario}"/>

                <TextBlock Grid.Column="0" Grid.Row="1" Text="Entry Number" VerticalAlignment="Center" />
                <controls:NumberBox Grid.Column="2" Grid.Row="1" Value="{Binding SelectedItem, Mode=TwoWay}" Min="{Binding MinIndex, Mode=OneTime}" Max="{Binding MaxIndex, Mode=OneTime}"/>

            </Grid>
        </GroupBox>

        <ScrollViewer Grid.Row="3" Grid.ColumnSpan="2">
            <ContentControl  Content="{Binding NestedViewModel}"/>
        </ScrollViewer>

    </Grid>
</UserControl>
