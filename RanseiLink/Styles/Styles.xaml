    <ResourceDictionary.MergedDictionaries>
        
        <ResourceDictionary Source="RedHoverButtonStyle.xaml"/>
        <ResourceDictionary Source="GrayHoverButtonStyle.xaml"/>
        <ResourceDictionary Source="RoundedGrayHoverButton.xaml"/>
        <ResourceDictionary Source="RoundedGrayToggleButton.xaml"/>
        <ResourceDictionary Source="MenuToggleButtonStyle.xaml"/>
        
        <ResourceDictionary Source="ListViewStyle1.xaml"/>

        <ResourceDictionary Source="ControlStyles/Button.xaml"/>
        <ResourceDictionary Source="ControlStyles/CheckBox.xaml"/>
        <ResourceDictionary Source="ControlStyles/ComboBox.xaml"/>
        <ResourceDictionary Source="ControlStyles/ContextMenu.xaml"/>
        <ResourceDictionary Source="ControlStyles/GroupBox.xaml"/>
