<UserControl x:Class="RanseiWpf.Controls.ModInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:Background="WhiteSmoke">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="40"/>
            <ColumnDefinition Width="10"/>-->
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <!--<Rectangle Fill="Gray" Grid.RowSpan="2" />-->
        <TextBlock x:Name="NameTextBlock" Text="Mod Name" FontSize="14" VerticalAlignment="Center" Grid.Column="0"/>
        <TextBlock x:Name="AuthorTextBlock" Foreground="#333333" Text="by Author" FontSize="11" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"/>
        <TextBlock x:Name="VersionTextBlock" Foreground="#333333" Text="v1.0.1" Grid.Column="2" FontSize="11" TextAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
