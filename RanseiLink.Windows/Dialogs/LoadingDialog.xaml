<Window x:Class="RanseiLink.Windows.Dialogs.LoadingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        xmlns:local="clr-namespace:RanseiLink.Windows.Dialogs"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:RanseiLink.Windows.Views"
        Title="ModCreationDialog" Background="Transparent" Width="445" Height="100">
    <Border BorderThickness="1" BorderBrush="{DynamicResource WindowBorderBrush}" MouseDown="TopBar_MouseDown" Background="{DynamicResource WindowBackgroundBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="HeaderTextBlock" Margin="0,0,0,20" FontSize="18" FontWeight="DemiBold" HorizontalAlignment="Center" d:Text="Header Text"/>
            <ProgressBar x:Name="ProgressBar" Width="400" Height="10" Value="0" />
        </StackPanel>
    </Border>
</Window>
